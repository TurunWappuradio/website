{
  "name": "wappuradio-site",
  "version": "1.0.0",
  "description": "A static site template using metalsmith.",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass --include-path scss src/main.scss dist/styles.css",
    "watch-css": "node-sass --include-path scss src/main.scss dist/styles.css -w",
    "build-metalsmith": "node build.js",
    "build-js": "webpack",
    "build-all": "npm run clean && npm run build-extras && npm run build-js",
    "copy-assets": "shx mkdir -p dist/ && shx cp -r src/assets/* dist/",
    "prettify": "prettier --write \"src/**/*.{js,jsx}\"",
    "clean": "shx rm -rf dist",
    "server": "http-server dist",
    "start": "npm run build-all && npm run server",
    "build-extras": "npm run clean && npm run build-metalsmith && npm run build-css && npm run copy-assets",
    "dev": "npm run build-extras && webpack-dev-server --config ./webpack.config.js --mode development",
    "release": "export NODE_ENV=production && npm run build-all && npm run upload && npm run server",
    "upload": "export NODE_ENV=production && node lib/awsUpload.js"
  },
  "engines": {
    "node": "10.11.0"
  },
  "author": "Julius Rajala",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@svgr/webpack": "^4.2.0",
    "aws-sdk": "^2.432.0",
    "babel-loader": "^8.0.5",
    "google-auth-library": "^3.1.2",
    "googleapis": "^48.0.0",
    "handlebars": "~4.7.3",
    "handlebars-helpers": "^0.10.0",
    "http-server": "~0.12.1",
    "metalsmith": "^2.1.0",
    "metalsmith-filter": "^1.0.2",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-markdown": "~1.3.0",
    "node-sass": "^4.13.0",
    "path": "^0.12.7",
    "prettier": "^1.16.4",
    "shx": "^0.2.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "mime-types": "^2.1.22"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "date-fns-timezone": "^0.1.4",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropdown": "^1.6.4"
  }
}
